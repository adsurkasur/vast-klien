{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ],
  "compilerOptions": {
    // "baseUrl": ".", // removed as deprecated
    // "paths": {
    //   "@/*": [
    //     "./src/*"
    //   ]
    // },
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node", 
    "ignoreDeprecations": "6.0",
    "jsx": "preserve",
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
  "next-env.d.ts",
  ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
